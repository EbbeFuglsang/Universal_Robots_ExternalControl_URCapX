{
  "name": "polyscopex-sdk-devcontainer",
  "image": "ebbefuglsang/urcap_builder_polyscopex",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "appPort": [
    "4200:4200"
  ],
  "forwardPorts": [
    4200
  ],
  "onCreateCommand": "sudo chmod 666 /var/run/docker.sock",
  "updateContentCommand": {
    "setOwnership": "sudo chown -R dev:dev ${containerWorkspaceFolder} /ursim-polyscopex"
  },
  "postCreateCommand": {
    "prepareUrsim": "sudo rm -f run-simulator && ln -s /ursim-polyscopex/run-simulator ${containerWorkspaceFolder}"
  },
  "postStartCommand": "sudo chmod 666 /var/run/docker.sock",
  "containerEnv": {
    "SHELL": "/bin/bash",
    "DEV_CONTAINER": "true",
    "containerWorkspaceFolder": "${containerWorkspaceFolder}"
  },
  "runArgs": [
    "--add-host=host.docker.internal:host-gateway",
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Angular.ng-template",
        "ZainChen.json",
        "ahern.urscript",
        "ecmel.vscode-html-css",
        "eriklynd.json-tools",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.vscode-typescript-next",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
      ]
    }
  }
}
